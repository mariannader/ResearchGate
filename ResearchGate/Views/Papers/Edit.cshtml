@model ResearchGate.Models.tbl_paper

@{ ViewBag.Title = "Edit";

    Layout = "~/Views/Shared/_Layout1.cshtml";}

<h2>Paper Edit</h2>


@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                   
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.p_id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.p_name,"Paper Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.p_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.p_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.p_file,"file path", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.p_file, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.p_file, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.p_fk_user, "Author Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("p_fk_user", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.p_fk_user, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>}

<div>
    @Html.ActionLink("Back to your profile", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}